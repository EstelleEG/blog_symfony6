        <h1>{{ article.title }} </h1>
        
        <hr>
        {{ article.content|raw }}

        <h1 class="comment-title mt-5">
            <span id="comment-count">{{ article.comments|length }} commentaire(s)</span>
        </h2>

        <hr>
        {# if connected, can post a comment #}
