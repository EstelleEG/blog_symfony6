<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>Blog - {% block title %}{% endblock %}</title>
        <link rel="icon" href="">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="py-2 bg-dark border-bottom">
            <div class="container d-flex flex-wrap">

                <div class="dropdown">
                    <a class="nav nav-link dropdown-toggle text-white" role="button" data-toggle="dropdown" aria-expanded="false">
                        my Blog
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonAdminDashboard">
                        <li><a class="dropdown-item" href="{{ path('admin') }}">Tableau de bord</a></li>
                        <li><a class="dropdown-item" href="#">Menus</a></li>
                    </ul>
                </div>

                <div class="dropdown">
                    <a class="nav nav-link dropdown-toggle text-white" role="button" data-toggle="dropdown" aria-expanded="false">
                        Ajouter
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonAdminAdd">
                        <li><a class="dropdown-item" href="#">Articles</a></li>
                        <li><a class="dropdown-item" href="#">Pages</a></li>
                    </ul>
                </div>

            </div>
        </nav>

        <div class="container">
            <header class="d-flex flex-wrap justify-content-center py-3 my-4 border-bottom">
                <a class="d-flex align-items-center mb-3 mb-md-8 me-md-auto text-dark text-decoration-none" href="{{ path("home")}}">
                    <span class="fs-4">My Blog</span>
                </a>

                <ul class="nav nav-pills align-items-center">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="#">Sign up</a>
                    </li>
                      <li class="nav-item">
                        <a class="nav-link text-dark" href="#">Log in</a>
                    </li>
                </ul>
            </header>
        </div>

        {% block body %}{% endblock %}

        <div class="container">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
                <div class="col-md-4 d-flex align-items-center">
                    <span class="copyright">Â© {{ 'now'|date('Y') }} Estelle blog</span>
                </div>
            </footer>
        </div>
    </body>
</html>
